{% if response|length > 0 %}
    {% for item in response %}
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-img-top">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="{{ item.media }}" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-title">
                    {# {% if item.logo is defined %}<img class="img-thumbnail" src="{{ item.logo }}" height="32px"/>{% endif %} #}
                        {{ item.title }}
                    </div>
                    <p>{{ item.desc }}</p>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="{{ item.url }}" target="_blank"><i class="fa fa-globe"></i> Voir</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12 text-center">
        - Aucun r√©sultats -
    </div>
{% endif %}