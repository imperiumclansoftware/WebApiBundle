    {% for item in response %}
            <div class="col-4 col-md-2 col-lg-1">
                <a href="{{ item.media }}" target="_blank">
                <img class="img-thumbnail" title="{{ item.title|raw }}" alt-src="{{ item.media_fullsize }}" src="{{ item.thumbnail }}" alt='Erreur !' onError="image_error(this);"/>
                </a>
            </div>
    {% endfor %}
{% else %}
    <div class="col-12 text-center">
