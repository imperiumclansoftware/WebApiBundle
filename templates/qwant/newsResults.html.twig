{% if response|length > 0 %}
    {% for items in response|batch(4) %}
        <div class="card-deck my-3">
        {% for item in items %}
            <div class="card">
                <img class="card-img-top" src="{{ item.media[0].pict_big.url }}"/>
                <div class="card-body">
                    <div class="card-title">{{ item.title }}</div>
                    <p>{{ item.desc }}</p>
                    <a href="{{ item.url }}" class="btn btn-primary" target="_blank"><i class="fa fa-globe"></i> Voir</a>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endfor %}
{% else %}
    <div class="col-12 text-center">
        - Aucun r√©sultats -
    </div>
{% endif %}